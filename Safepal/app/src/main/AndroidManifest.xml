<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unfpa.safepal">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--acquire the user location -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--Calling through the application -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/home_activity_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">

        </activity>
        <activity
            android:name=".report.WhoSGettingHelpActivity"
            android:label="@string/wsgh_activity_title"
            android:parentActivityName=".home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.HomeActivity" />
        </activity>
        <activity
            android:name=".report.SurvivorIncidentFormActivity"
            android:label="@string/sif_activity_title"
            android:parentActivityName=".report.WhoSGettingHelpActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">



            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".report.WhoSGettingHelpActivity" />
        </activity>
        <activity
            android:name=".report.AnotherPersonIncidentFormActivity"
            android:label="@string/apif_activity_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".report.WhoSGettingHelpActivity" />
        </activity>


        <activity
            android:name=".ProvideHelp.ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProvideHelp.CsoActivity"
            android:label="@string/title_activity_cso"
            android:parentActivityName=".ProvideHelp.ContactActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProvideHelp.ContactActivity" />
        </activity>


        <provider
            android:name=".store.ReportIncidentContentProvider"
            android:authorities="com.unfpa.safepal.store.contentprovider" />


        <!-- waits network and inserts a unique id to content provider and user -->
        <!--
        No intent filters are specified, so android:exported defaults to "false". The
        service is only available to this app.
        -->
        <service
            android:name=".network.UIDPullService"
            android:exported="false"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>