<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unfpa.safepal">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/home_activity_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".report.WhoSGettingHelpActivity"
            android:label="@string/wsgh_activity_title"
            android:parentActivityName=".home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.HomeActivity" />
        </activity>
        <activity
            android:name=".report.SurvivorIncidentFormActivity"
            android:label="@string/sif_activity_title"
            android:parentActivityName=".report.WhoSGettingHelpActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">



            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".report.WhoSGettingHelpActivity" />
        </activity>
        <activity
            android:name=".report.AnotherPersonIncidentFormActivity"
            android:label="@string/apif_activity_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".report.WhoSGettingHelpActivity" />
        </activity>
        <activity
            android:name=".Referral.ReferralActivity"
            android:label="@string/title_activity_referral"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true"/>
        <activity
            android:name=".Referral.ReferralActivity2"
            android:label="@string/title_activity_eferral2"
            android:parentActivityName=".Referral.ReferralActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true"/>

        <provider
            android:name=".store.ReportIncidentContentProvider"
            android:authorities="com.unfpa.safepal.store.contentprovider" />

        <activity
            android:name=".ProvideHelp.CsoActivity"
            android:label="@string/title_activity_cso"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true" >

        </activity>
        <activity
            android:name=".ProvideHelp.ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar"
            android:autoRemoveFromRecents="true">


        </activity>

        <!-- waits network and inserts a unique id to content provider and user -->
        <!--
        No intent filters are specified, so android:exported defaults to "false". The
        service is only available to this app.
        -->
        <service
            android:name=".network.UIDPullService"
            android:exported="false"/>

    </application>

</manifest>