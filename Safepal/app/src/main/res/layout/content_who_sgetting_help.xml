<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorGrey"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".report.WhoSGettingHelpActivity"
    tools:showIn="@layout/activity_who_s_getting_help">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/wsgh_ecouraging_messages_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wsgh_msgs_to_ecourage_survivor"
            android:ellipsize="end"
            android:maxLines="3"/>

        <View
            android:id="@+id/wsgh_horizotal_line"
            android:layout_below="@+id/wsgh_ecouraging_messages_tv"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:layout_marginBottom="@dimen/overall_et_margin_bottom"
            android:layout_marginTop="@dimen/overall_et_margin_top"
            android:background="@color/colorGreyDarker" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wsgh_happened_to_who"
            android:textSize="@dimen/wsgh_middle_text"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_above="@+id/wsgh_second_horizotal_line"
            />
        <View
            android:id="@+id/wsgh_second_horizotal_line"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:layout_marginBottom="@dimen/overall_et_margin_bottom"
            android:layout_marginTop="@dimen/overall_et_margin_top"
            android:background="@color/colorGreyDarker"
            android:layout_above="@+id/wsgh_who_rg"/>
        <RadioGroup
            android:id="@+id/wsgh_who_rg"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton android:id="@+id/wsgh_yes_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/wsgh_yes"
                android:textColor="@drawable/rbtn_rb_textcolor_selector"
                android:onClick="onClickWSGHRadioButton"
                />
            <RadioButton android:id="@+id/wsgh_someoneelse_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/wsgh_someone_else"
                android:textColor="@drawable/rbtn_rb_textcolor_selector"
                android:onClick="onClickWSGHRadioButton"
                />
        </RadioGroup>
        <RelativeLayout
            android:id="@+id/wsgh_spinner_rl"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/wsgh_who_rg"
            android:layout_marginRight="3dp"
            android:paddingRight="5dp"
            android:background="@drawable/rbtn_rb_selector"
            android:orientation="horizontal"
            android:visibility="gone"
            android:onClick="onClickWsghIvSpinner">

            <Spinner
                android:id="@+id/wsgh_relationship_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_down"
                />
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>
