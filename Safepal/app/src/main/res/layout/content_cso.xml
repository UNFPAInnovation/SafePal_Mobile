<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unfpa.safepal.ProvideHelp.CsoActivity"
    tools:showIn="@layout/activity_cso">
    <TextView
        android:id="@+id/cso_ecouraging_messages_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/wsgh_msgs_to_ecourage_survivor"/>
    <View
        android:id="@+id/cso_horizotal_line"
        android:layout_below="@+id/cso_ecouraging_messages_tv"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:layout_marginBottom="@dimen/overall_et_margin_bottom"
        android:layout_marginTop="@dimen/overall_et_margin_top"
        android:background="@color/colorGreyDarker" />
    <TextView
        android:id="@+id/cso_safepal_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cso_horizotal_line"
        android:textStyle="bold|italic"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>
