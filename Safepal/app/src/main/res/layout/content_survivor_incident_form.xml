<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".report.SurvivorIncidentFormActivity"
    android:background="@color/colorGrey"
    tools:showIn="@layout/activity_survivor_incident_form">




<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sif_ecouraging_messages_tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/wsgh_msgs_to_ecourage_survivor"
        android:ellipsize="end"
        android:maxLines="3"
        android:onClick="onClickSifEncouragingMessages"/>
    <View
        android:id="@+id/sif_horizotal_line"
        android:layout_below="@+id/sif_ecouraging_messages_tv"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:layout_marginBottom="@dimen/overall_et_margin_bottom"
        android:layout_marginTop="@dimen/overall_et_margin_top"

        android:background="@color/colorGreyDarker" />
    <!-- Age Textbox and Button-->

    <LinearLayout
        android:id="@+id/sif_gender_linear_layout"
        android:layout_below="@+id/sif_age_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/overall_et_margin_top"
        android:layout_marginBottom="@dimen/overall_et_margin_bottom"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sif_gender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/sif_survivor_gender"
            android:textSize="16dp"/>
        <RadioGroup
            android:id="@+id/sif_gender_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/sif_gender_girl_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_female_icon"
                android:background="@drawable/rbtn_rb_selector"
                android:layout_weight="0.04"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <RadioButton
                android:id="@+id/sif_gender_boy_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:background="@drawable/rbtn_rb_selector"
                android:button="@drawable/ic_male_icon"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </RadioGroup>

    </LinearLayout>
    <EditText
        android:id="@+id/sif_incident_location_actv"
        android:layout_below="@+id/sif_gender_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/overall_et_margin_top"
        android:layout_marginBottom="@dimen/overall_et_margin_bottom"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:padding="@dimen/overall_et_padding_top"
        android:background="@drawable/rbtn_rb_selector"
        android:hint="@string/sif_incident_location"
        android:maxLines="1"/>

    <!-- Incident type spinner and Image View-->
    <LinearLayout
        android:id="@+id/sif_incident_type_spinner_rl"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/sif_incident_location_actv"

        android:layout_marginRight="16dp"
        android:paddingRight="5dp"
        android:background="@drawable/rbtn_rb_selector"
        android:orientation="horizontal"
       >

        <Spinner
            android:id="@+id/sif_incident_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:spinnerMode="dropdown"
            android:background="@null"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_down"
            android:onClick="onClickSifIVSpinner"/>
    </LinearLayout>

    <!-- EditText and Submit FAB for the story -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sif_incident_type_spinner_rl"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"

        >
        <EditText
            android:id="@+id/sif_incident_details_rt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/overall_et_margin_top"
            android:layout_marginBottom="@dimen/overall_et_margin_bottom"
            android:layout_marginRight="5dp"
            android:padding="@dimen/overall_et_padding_top"
            android:hint="@string/sif_incident_details"
            android:inputType="text|textMultiLine"
            android:maxLines="3"
            android:background="@drawable/rbtn_rb_selector"
            android:textColor="@drawable/rbtn_rb_textcolor_selector"
            />
        <!-- FAB and Text for submit -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="bottom|center"
            android:orientation="vertical"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/sif_submit_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_white_48dp"
                android:onClick="onClickAddIncidentSurvivor"
                android:layout_marginBottom="2dp"
                app:fabSize="mini"
                app:backgroundTint="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:background="@color/colorWhite"
                android:text="@string/overall_fab_submit"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sif_age_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sif_horizotal_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/sif_age_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sif_survivor_age"
            android:textSize="16dp" />
        <Button
            android:id="@+id/sif_date_of_birth_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:background="@drawable/rbtn_rb_selector"
            android:onClick="showDatePickerDialog"
            android:text="@string/sif_survivor_pick_age"
            android:textColor="@drawable/rbtn_rb_textcolor_selector"

            />
    </LinearLayout>
    <include layout="@layout/footer_buttons" />
</LinearLayout>
</android.support.v4.widget.NestedScrollView>